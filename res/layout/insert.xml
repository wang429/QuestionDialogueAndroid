<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content">

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Question Type ID" />
	<EditText android:layout_width="fill_parent"
		android:layout_height="50dp" android:id="@+id/QuestionTypeIDET" />

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Question" />
	<EditText android:layout_width="fill_parent"
		android:layout_height="50dp" android:id="@+id/QuestionET" />

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Answer" />
	<EditText android:layout_width="fill_parent"
		android:layout_height="50dp" android:id="@+id/AnswerET" />

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Distractor1" />
	<EditText android:layout_width="fill_parent"
		android:layout_height="50dp" android:id="@+id/Distractor1ET" />

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Distractor2" />
	<EditText android:layout_width="fill_parent"
		android:layout_height="50dp" android:id="@+id/Distractor2ET" />
	<Button android:id="@+id/InsertRecordButton"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:text="Insert" />
	<Button android:id="@+id/MenuButton" android:layout_width="wrap_content"
		android:layout_height="wrap_content"  android:text="Menu"/>
</LinearLayout>